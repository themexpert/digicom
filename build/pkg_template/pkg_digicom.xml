<?xml version="1.0" encoding="UTF-8" ?>
<extension type="package" version="3.0" method="upgrade">

    <name>pkg_digicom</name>
    <packagename>digicom</packagename>
    <creationDate>March 2015</creationDate>
    <packager>ThemeXpert</packager>
    <copyright>(C) 2010 - 2015 ThemeXpert. All rights reserved.</copyright>
    <packageremail>info@themexpert.com</packageremail>
    <packagerurl>www.themexpert.com</packagerurl>
    <author>ThemeXpert</author>
    <authorEmail>info@themexpert.com</authorEmail>
    <authorUrl>www.themexpert.com</authorUrl>
    <version>1.0.0-beta.2</version>
    <license>GNU General Public License version 3 or later;</license>
    <description>PKG_DIGICOM_XML_DESCRIPTION</description>
    <scriptfile>pkg.script.php</scriptfile>

    <files>
        <!-- The id for each extension is the element stored in the DB -->
        <!-- Administration component -->
        <file type="component" id="com_digicom">com_digicom.zip</file>
        <!-- Module - Shopping cart -->
        <file type="module" id="mod_digicom_cart" client="site">mod_digicom_cart.zip</file>
        <!-- Module - Categories List -->
        <file type="module" id="mod_digicom_categories" client="site">mod_digicom_categories.zip</file>
        <!-- Module - Admin menu -->
        <file type="module" id="mod_digicom_menu" client="admin">mod_digicom_menu.zip</file>
        <!-- Payment Plugin - paypal -->
        <file type="plugin" id="paypal" group="digicom_pay">plg_digicom_pay_paypal.zip</file>
        <!-- Payment plugin - offline -->
        <file type="plugin" id="offline" group="digicom_pay">plg_digicom_pay_offline.zip</file>
        <!-- Search plugin - finder-->
        <file type="plugin" id="digicom" group="finder">plg_finder_digicom.zip</file>
        <!-- System plugin - digicom-->
        <file type="plugin" id="system" group="system">plg_system_digicom.zip</file>
        <!-- Content plugin - digicom-->
        <file type="plugin" id="content" group="content">plg_content_digicom.zip</file>
        <!-- Editor-XTD plugin - digicom-->
        <file type="plugin" id="editors-xtd" group="editors-xtd">plg_editors-xtd_digicom.zip</file>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.pkg_digicom.sys.ini</language>
    </languages>
    
    <updateservers>
         <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" priority="1" name="DigiCom Update Site"><![CDATA[https://raw.githubusercontent.com/themexpert/digicom/develop/manifest.xml]]></server>
    </updateservers>

</extension>
