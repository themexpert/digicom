<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="digicom_pay" method="upgrade">
	<name>Offline Payment - DigiCom Pay Plugin</name>
	<author>themexpert.com</author>
	<creationDate>25th Oct 2013</creationDate>
	<copyright>themexpert.com. All Rights Reserved.</copyright>
	<authorEmail>extensions@themexpert.com.com</authorEmail>
	<authorUrl>http://www.themexpert.com.com</authorUrl>
	<license>GNU/GPLv3</license>
	<version>3.1.1</version>
	<description>Offline Payment - DigiCom Pay Plugin by themexpert.com. </description>
	<files>
		<filename plugin="offline">offline.php</filename>
		<folder>offline</folder>
		<folder>language</folder>
	</files>
		<languages folder="language"> 
			<language tag="en-GB">en-GB/en-GB.plg_digicom_pay_offline.ini</language>
  	</languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_name" type="text" default="PayBy Purchase Order" label="PLG_NAME" description="" />	
				<field name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
			</fieldset>
		</fields>
	</config>
</extension>
