<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_digicom/models/fields">
	
		<field name="id"  type="hidden" />
		<field name="title"  type="text" />
		<field name="code"  type="text" />
		<field name="codelimit"  type="number" />
		<field name="amount"  type="number"  class="input-small"/>
		
		<field id="promotype" name="promotype" type="radio" class="btn-group" size="1" default="1" >
			<option value="1"> COM_DIGICOM_DISCOUNT_TYPE_PERCENTAGE</option>
			<option value="0"> COM_DIGICOM_DISCOUNT_TYPE_FIXED</option>
		</field>

		<field name="codestart" type="calendar" />
		<field name="codeend" type="calendar" />
		<field name="forexisting" type="hidden" />

		<field name="aftertax" type="hidden" />
		
		<field id="discount_enable_range" name="discount_enable_range" type="radio" class="btn-group" size="1" default="1" >
			<option value="1"> JYES</option>
			<option value="0"> JNO</option>
		</field>

		<field name="used" type="hidden" />

		<field name="validfornew" type="checkbox" value="1" default="0" />
		<field name="validforrenewal" type="checkbox" value="1" default="0" />

		<field name="products" type="hidden" />
		
		<field name="ordering" type="hidden" />
		<field name="checked_out" type="hidden" />
		<field name="checked_out" type="hidden" />
		<field name="checked_out_time" type="hidden" />
		
		<field id="published" name="published" type="radio" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="btn-group" size="1" default="1" >
			<option value="1"> JPUBLISHED</option>
			<option value="0"> JUNPUBLISHED</option>
		</field>
		
	</fields>
	
</form>