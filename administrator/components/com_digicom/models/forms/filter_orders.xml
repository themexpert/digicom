<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_CONTENT_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="list"
			label="COM_CONTENT_FILTER_PUBLISHED"
			description="COM_CONTENT_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_DIGICOM_ORDER_CREATE_NEW_FIELD_ORDER_STATUS_LABEL</option>
			<option value="Active">COM_DIGICOM_ORDER_STATUS_ACTIVE</option>
			<option value="Pending">COM_DIGICOM_ORDER_STATUS_PENDING</option>
			<option value="Cancel">COM_DIGICOM_ORDER_STATUS_CANCEL</option>
		</field>
		<field
			name="order_type"
			type="list"
			label="COM_DIGICOM_PRODUCTS_TYPE"
			description=""
			onchange="this.form.submit();"
			>
			<option value="">COM_DIGICOM_ORDERS_TYPE</option>
			<option value="free">COM_DIGICOM_ORDER_TYPE_FREE</option>
			<option value="purchase">COM_DIGICOM_ORDER_TYPE_PURCHASED</option>
		</field>

	</fields>

	<fields name="filter">
		<field
			name="startdate"
			type="calendar"
			label="DSFROM"
			description=""
			format="%d-%m-%Y"
			/>

		<field
			name="enddate"
			type="calendar"
			label="DSTO"
			description=""
			format="%d-%m-%Y"
			/>

	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
