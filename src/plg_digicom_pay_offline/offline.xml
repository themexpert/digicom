<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="digicom_pay" method="upgrade">

	<name>Offline Payment - DigiCom Pay Plugin</name>
	<author>ThemeXpert</author>
	<creationDate>##DIGICOM_CREATIONDATE##</creationDate>
	<copyright>themexpert.com. All Rights Reserved.</copyright>
	<authorEmail>extensions@themexpert.com</authorEmail>
	<authorUrl>http://www.themexpert.com</authorUrl>
	<license>GNU/GPLv3</license>
	<version>##DIGICOM_VERSION##</version>
	<description>Offline Payment - DigiCom Pay Plugin by themexpert.com. </description>

	<files>
		<filename plugin="offline">offline.php</filename>
		<folder>offline</folder>
	</files>

	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plg_digicom_pay_offline.ini</language>
  </languages>

	<config name="params">

		<fields name="params">

			<fieldset name="basic">

				<field name="plugin_name" type="text" default="Offline Payment" label="PLG_DIGICOM_PAY_OFFLINE_PLUGIN_NAME" description="" />

				<field name="plugin_mail" type="textarea" default="" label="PLG_DIGICOM_PAY_OFFLINE_MAIL_ADDRESS" description="PLG_DIGICOM_PAY_OFFLINE_MAIL_ADDRESS_DESC" rows="5" cols="20"  />

			</fieldset>

			<fieldset name="style" label="PLG_DIGICOM_PAY_OFFLINE_STYLE_LABEL">

				<field type="text" name="title" label="PLG_DIGICOM_PAY_OFFLINE_TITLE_LABEL" default="Offline" />

				<field type="textarea" name="description" label="PLG_DIGICOM_PAY_OFFLINE_DESCRIPTION_LABEL" default="" />

				<field type="media" name="preview_image" label="PLG_DIGICOM_PAY_OFFLINE_PREVIEW_IMAGE_LABEL" default="" />

				<field type="media" name="buy_image" label="PLG_DIGICOM_PAY_OFFLINE_BUY_IMAGE_LABEL" default="" />
				
			</fieldset>

		</fields>

	</config>

</extension>
